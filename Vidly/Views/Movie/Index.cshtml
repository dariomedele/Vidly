@model List<Vidly.Models.Movie>

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Movies</h2>

@if (Model.Count == 0)
{
    <Text> No movies found</Text>

}
else
{
    @Html.ActionLink("New Movie", "New","Home", new { @class = "btn btn-primary" })


    <table class="table table-bordered table-hover">
        <thead>
            <tr><th>Movie </th><th>Genre</th></tr>
        </thead>
        <tbody>
            @foreach (var movie in Model)
            {
            <tr>
                <td>
                    @Html.ActionLink(@movie.Name, "Edit", new { id = movie.Id })
                </td>
                <td>
                    @movie.Genre.Name 
                </td>
            </tr>

            }
        </tbody>
    </table>
}
